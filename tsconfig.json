{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@tn/libs/*": [
        "./packages/libs/*"
      ],
      "@tn/components/*": [
        "./components/*"
      ],
      "@tn/constants/*": [
        "./constants/*"
      ],
      "@tn/hooks/*": [
        "./packages/hooks/*"
      ],
      "@tn/atoms/*": [
        "./components/atoms/*"
      ],
      "@tn/molecules/*": [
        "./components/molecules/*"
      ],
      // With Indexes
      "@atoms": [
        "./components/atoms/index"
      ],
      "@molecules": [
        "./components/molecules/index"
      ],
      "@constants": [
        "./constants/index"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
